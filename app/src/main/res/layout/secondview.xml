<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/container_original"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".HelloDroidActivity">

    <LinearLayout
            android:id="@+id/info_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">
        <TextView
                android:id="@+id/code_info_original"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
        />

        <SurfaceView
                android:id="@+id/camera_view_original"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                android:layout_above="@+id/info"
        />
    </LinearLayout>
    <Button
            android:id="@+id/btn_restart_activity-original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Restart activity"
            tools:layout_editor_absoluteY="650dp" tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints"/>
    <Button
            android:id="@+id/btn_start_stop_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start/Stop reader"
            tools:layout_editor_absoluteY="572dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>