<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelloDroidActivity">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/image_lambda"
            android:id="@+id/houseImage"
            tools:ignore="MissingConstraints" android:contentDescription="@string/description_photo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/camera_view_one"
            app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="409dp"
            android:layout_height="wrap_content" android:id="@+id/clickCounter"
            tools:layout_editor_absoluteX="0dp" android:padding="10dp" android:paddingLeft="10dp"
            android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
            android:textColor="@color/text_color" android:textSize="24sp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/houseImage" android:layout_marginTop="108dp"/>
    <SurfaceView
            android:id="@+id/camera_view_one"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/info"
            tools:layout_editor_absoluteX="-2dp" app:layout_constraintTop_toBottomOf="@+id/btn_start_stop"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/seb_text"
            android:layout_width="409dp"
            android:layout_height="wrap_content" android:id="@+id/seb_text"
            tools:layout_editor_absoluteX="0dp" android:padding="10dp" android:paddingLeft="10dp"
            android:paddingTop="10dp" android:paddingRight="10dp" android:paddingBottom="10dp"
            android:textColor="@color/text_color" android:textSize="24sp" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="595dp"/>
    <Button
            android:id="@+id/btn_start_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start/Stop reader"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btn_restart_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Restart activity"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>